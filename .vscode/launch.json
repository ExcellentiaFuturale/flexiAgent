{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Attach using Process Id",
            "type": "python",
            "request": "attach",
            "processId": "${command:pickProcess}",
        },
        {
            "name": "fwagent daemon",
            "type": "python",
            "request": "launch",
            "module": "${workspaceFolder}/fwagent",
            "args": [
                "daemon"
            ],
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}/flexiagent"
            }
        },
        {
            "name": "fwkill",
            "type": "python",
            "request": "launch",
            "module": "${workspaceFolder}/tools/common/fwkill",
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}/flexiagent"
            }
        },
        {
            "name": "reset",
            "type": "python",
            "request": "launch",
            "module": "${workspaceFolder}/fwagent",
            "args": [
                "reset"
            ],
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}/flexiagent"
            }
        },
        {
            "name": "reset soft",
            "type": "python",
            "request": "launch",
            "module": "${workspaceFolder}/fwagent",
            "args": [
                "reset",
                "-s"
            ],
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}/flexiagent"
            }
        },
        {
            "name": "Cache",
            "type": "python",
            "request": "launch",
            "module": "${workspaceFolder}/fwagent",
            "args": [
                "show",
                "--configuration"
            ],
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}/flexiagent"
            }
        },
        {
            "name": "Test: Run Specific Test",
            "type": "python",
            "request": "launch",
            "module": "${workspaceFolder}/tests/router/01_cli_basic_requests_test",
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            }
        },
        {
            "name": "Test: Inject One Cli Request",
            "type": "python",
            "request": "launch",
            "module": "${workspaceFolder}/fwagent",
            "args": [
                "cli",
                "-f",
                "/root/flexiagent/tests/router/04_revert_on_list_request_failure_test/01_list_interfaces.cli",
                "-t",
                "/root/flexiagent/tests/fwtemplates.yaml"
            ],
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            }
        },
        {
            "name": "fwagent_without_flexiManage",
            "type": "python",
            "request": "launch",
            "module": "${workspaceFolder}/fwagent",
            "args": [
                "daemon", "--dont_connect"
            ],
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}/flexiagent"
            }
        },
        {
            "name": "pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-k",
                "04",
                "-s"
            ],
            "cwd": "${workspaceRoot}/tests",
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            }
        },
        {
            "name": "system_checker",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tools/system_checker/fwsystem_checker.py",
            "args": [],
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}/"
            },
            "sudo": true,
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Pytest + Agent",
            "configurations": ["fwagent_without_flexiManage", "Test: Inject One Cli Request"]
        }
    ]
}
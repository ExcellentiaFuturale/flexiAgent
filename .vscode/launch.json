    "version": "0.2.0",
    "configurations": [
        {
            "name": "fwagnet",
            "type": "python",
            "request": "launch",
            "module": "${workspaceFolder}/fwagent",
            "args": [
                "daemon"
            ],
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}/flexiagent"
            }
        },
        {
            "name": "fwkill",
            "type": "python",
            "request": "launch",
            "module": "${workspaceFolder}/tools/common/fwkill",
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}/flexiagent"
            }
        },
        {
            "name": "reset",
            "type": "python",
            "request": "launch",
            "module": "${workspaceFolder}/fwagent",
            "args": [
                "reset"
            ],
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}/flexiagent"
            }
        },
        {
            "name": "reset soft",
            "type": "python",
            "request": "launch",
            "module": "${workspaceFolder}/fwagent",
            "args": [
                "reset", "-s"
            ],
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}/flexiagent"
            }
        },
        {
            "name": "Cache",
            "type": "python",
            "request": "launch",
            "module": "${workspaceFolder}/fwagent",
            "args": [
                "show", "--agent", "cache"
            ],
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}/flexiagent"
            }
        },
        {
            "name": "Test: Run Specific Test",
            "type": "python",
            "request": "launch",
            "module": "${workspaceFolder}/tests/router/01_cli_basic_requests_test",
            "cwd": "${workspaceRoot}",
            "env": {"PYTHONPATH": "${workspaceRoot}"}
        },
        {
            "name": "Test: Inject One Cli Request",
            "type": "python",
            "request": "launch",
            "module": "${workspaceFolder}/fwagent",
            "args": [
                "cli", "-f", "/home/shneor/flexiagent/tests/router/01_cli_basic_requests_test/03_start-router_add-tunnel_remove-tunnel_stop-router.cli"
            ],
            "cwd": "${workspaceRoot}",
            "env": {"PYTHONPATH": "${workspaceRoot}"}
        },
        {
            "name": "system_checker",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tools/system_checker/fwsystem_checker.py",
            "args": [],
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}/"
            },
            "sudo": true,
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}